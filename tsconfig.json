{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": false,
    "target": "es2016",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": [
      "es2016"
    ],
    "rootDir": "./",
    "baseUrl": "./*.ts",
    "skipLibCheck": true,
    "types": [
      "node",
      "mocha"
    ],
    "typeRoots": [
      "node_modules/@types",
      "Interfaces.ts"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
  "include": [
    "./src/**/*.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}